{
  "dashboard": {
    "id": null,
    "uid": "application-pod-monitoring",
    "title": "Application Pod Monitoring",
    "tags": ["kubernetes", "pods", "applications"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "PrestaShop CPU Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"ecom-app\", container=\"prestashop\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "PrestaShop Memory Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "(container_memory_working_set_bytes{namespace=\"ecom-app\", container=\"prestashop\"} / container_spec_memory_limit_bytes{namespace=\"ecom-app\", container=\"prestashop\"}) * 100",
            "legendFormat": "Memory %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "MySQL CPU Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"ecom-app\", container=\"mysql\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "MySQL Memory Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "(container_memory_working_set_bytes{namespace=\"ecom-app\", container=\"mysql\"} / container_spec_memory_limit_bytes{namespace=\"ecom-app\", container=\"mysql\"}) * 100",
            "legendFormat": "Memory %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Application CPU Usage Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"ecom-app\"}[5m]) * 100",
            "legendFormat": "{{container}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Application Memory Usage Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{namespace=\"ecom-app\"} / 1024 / 1024",
            "legendFormat": "{{container}} (MB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Pod Restart Count",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"ecom-app\"})",
            "legendFormat": "Total Restarts"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Pod Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_info{namespace=\"ecom-app\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 16}
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{namespace=\"ecom-app\"}[5m])",
            "legendFormat": "{{pod}} - Received"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{namespace=\"ecom-app\"}[5m])",
            "legendFormat": "{{pod}} - Transmitted"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}