{
  "dashboard": {
    "id": null,
    "uid": "eks-cluster-health",
    "title": "EKS Cluster Health & Alerts",
    "tags": ["kubernetes", "health", "alerts"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Cluster Health Score",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(up{job=\"kubernetes-nodes\"}) / count(up{job=\"kubernetes-nodes\"}) * 100",
            "legendFormat": "Health %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Failed Pods",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})",
            "legendFormat": "Failed Pods"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Pending Pods",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
            "legendFormat": "Pending Pods"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Running Pods",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
            "legendFormat": "Running Pods"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Node Resource Allocation",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{resource=\"cpu\"}) by (node)",
            "legendFormat": "CPU Requests - {{node}}"
          },
          {
            "expr": "sum(kube_node_status_allocatable{resource=\"cpu\"}) by (node)",
            "legendFormat": "CPU Allocatable - {{node}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Memory Resource Allocation",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(kube_pod_container_resource_requests{resource=\"memory\"}) by (node) / 1024 / 1024 / 1024",
            "legendFormat": "Memory Requests - {{node}} (GB)"
          },
          {
            "expr": "sum(kube_node_status_allocatable{resource=\"memory\"}) by (node) / 1024 / 1024 / 1024",
            "legendFormat": "Memory Allocatable - {{node}} (GB)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Disk Usage by Node",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\"})",
            "legendFormat": "{{instance}} - Disk Usage %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Network Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_errs_total[5m])",
            "legendFormat": "{{instance}} - RX Errors"
          },
          {
            "expr": "rate(node_network_transmit_errs_total[5m])",
            "legendFormat": "{{instance}} - TX Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}