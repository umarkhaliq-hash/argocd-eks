{
  "id": null,
  "uid": "eks-monitoring",
  "title": "EKS Cluster & App Monitoring",
  "tags": ["kubernetes", "eks", "applications"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Total Nodes",
      "type": "stat",
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Nodes",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "Running Pods",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running Pods",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "PrestaShop CPU %",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"ecom-app\", container=\"prestashop\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent"
        }
      }
    },
    {
      "id": 4,
      "title": "MySQL Memory MB",
      "type": "stat",
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{namespace=\"ecom-app\", container=\"mysql\"} / 1024 / 1024",
          "legendFormat": "Memory MB",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "decbytes"
        }
      }
    },
    {
      "id": 5,
      "title": "Node CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent"
        }
      }
    },
    {
      "id": 6,
      "title": "Application Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{namespace=\"ecom-app\"} / 1024 / 1024",
          "legendFormat": "{{container}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "decbytes"
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}